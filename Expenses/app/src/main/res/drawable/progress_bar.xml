<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#30c217"
                android:centerColor="#30c217"
                android:endColor="#30c217"
                />
        </shape>
    </item>


    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="#e4430e"
                    android:endColor="#e4430e" />
            </shape>
        </clip>
    </item>

</layer-list>

<!--Reference: http://stackoverflow.com/questions/18800290/how-to-change-progressbar-color-->